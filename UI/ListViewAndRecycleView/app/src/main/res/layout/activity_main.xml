<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_array_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_array_lv"
        android:textSize="@dimen/big_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_simple_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_simple_lv"
        android:textSize="@dimen/big_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_array_lv" />

    <Button
        android:id="@+id/btn_custom_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_custom_lv"
        android:textSize="@dimen/big_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_simple_lv" />

    <Button
        android:id="@+id/btn_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_rv"
        android:textSize="@dimen/big_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_custom_lv" />

    <Button
        android:id="@+id/btn_stagger_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_stagger_rv"
        android:textSize="@dimen/big_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_rv" />


</android.support.constraint.ConstraintLayout>